{"ast":null,"code":"import { GiphyFetch } from '@giphy/js-fetch-api';\nimport { GIPHY_API_KEY, GIPHY_CONFIG } from '@/config/giphy';\n\n// 初始化 GIPHY API 客户端\nconst gf = new GiphyFetch(GIPHY_API_KEY);\nexport default {\n  name: 'StickerPicker',\n  data() {\n    return {\n      searchQuery: '',\n      stickers: [],\n      loading: false,\n      currentCategory: 'trending',\n      categories: [{\n        id: 'trending',\n        name: '热门'\n      }, {\n        id: 'reactions',\n        name: '反应'\n      }, {\n        id: 'memes',\n        name: '梗图'\n      }, {\n        id: 'anime',\n        name: '动漫'\n      }, {\n        id: 'cute',\n        name: '可爱'\n      }],\n      searchTimeout: null\n    };\n  },\n  methods: {\n    async fetchStickers(options = {}) {\n      this.loading = true;\n      try {\n        let response;\n        if (this.searchQuery) {\n          response = await gf.search(this.searchQuery, {\n            ...GIPHY_CONFIG,\n            ...options,\n            type: 'stickers',\n            limit: 20 // 减少加载数量以提高性能\n          });\n        } else {\n          response = await gf.trending({\n            ...GIPHY_CONFIG,\n            ...options,\n            type: 'stickers',\n            limit: 20 // 减少加载数量以提高性能\n          });\n        }\n        this.stickers = response.data;\n      } catch (error) {\n        console.error('Error fetching stickers:', error);\n      }\n      this.loading = false;\n    },\n    handleSearch() {\n      if (this.searchTimeout) {\n        clearTimeout(this.searchTimeout);\n      }\n      this.searchTimeout = setTimeout(() => {\n        this.fetchStickers();\n      }, 300);\n    },\n    selectCategory(category) {\n      this.currentCategory = category.id;\n      this.searchQuery = category.id === 'trending' ? '' : category.name;\n      this.fetchStickers();\n    },\n    selectSticker(sticker) {\n      this.$emit('select', {\n        id: sticker.id,\n        url: sticker.images.original.url,\n        // 使用原始尺寸的图片\n        title: sticker.title\n      });\n    }\n  },\n  mounted() {\n    this.fetchStickers();\n  }\n};","map":{"version":3,"names":["GiphyFetch","GIPHY_API_KEY","GIPHY_CONFIG","gf","name","data","searchQuery","stickers","loading","currentCategory","categories","id","searchTimeout","methods","fetchStickers","options","response","search","type","limit","trending","error","console","handleSearch","clearTimeout","setTimeout","selectCategory","category","selectSticker","sticker","$emit","url","images","original","title","mounted"],"sources":["C:\\Users\\Administrator\\Desktop\\discord-chat-app\\fack\\just-do-it\\src\\components\\chat\\StickerPicker.vue"],"sourcesContent":["<template>\r\n  <div class=\"sticker-picker\">\r\n    <!-- 标题 -->\r\n    <div class=\"sticker-picker-header\">\r\n      {{ currentCategory === 'trending' ? '热门表情' : categories.find(c => c.id === currentCategory)?.name || '表情包' }}\r\n    </div>\r\n\r\n    <!-- 搜索框 -->\r\n    <div class=\"search-container\">\r\n      <input \r\n        type=\"text\" \r\n        v-model=\"searchQuery\"\r\n        placeholder=\"搜索表情包...\"\r\n        @input=\"handleSearch\"\r\n        class=\"search-input\"\r\n      />\r\n    </div>\r\n\r\n    <!-- 分类标签 -->\r\n    <div class=\"categories\">\r\n      <button \r\n        v-for=\"category in categories\" \r\n        :key=\"category.id\"\r\n        @click=\"selectCategory(category)\"\r\n        :class=\"['category-btn', { active: currentCategory === category.id }]\"\r\n      >\r\n        {{ category.name }}\r\n      </button>\r\n    </div>\r\n\r\n    <!-- 表情包网格 -->\r\n    <div class=\"stickers-grid\" ref=\"gridContainer\">\r\n      <div v-if=\"loading\" class=\"loading\">加载中...</div>\r\n      <template v-else>\r\n        <div \r\n          v-for=\"sticker in stickers\" \r\n          :key=\"sticker.id\" \r\n          class=\"sticker-item\"\r\n          @click=\"selectSticker(sticker)\"\r\n        >\r\n          <img \r\n            :src=\"sticker.images.original.url\" \r\n            :alt=\"sticker.title\"\r\n            loading=\"lazy\"\r\n          />\r\n        </div>\r\n      </template>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { GiphyFetch } from '@giphy/js-fetch-api'\r\nimport { GIPHY_API_KEY, GIPHY_CONFIG } from '@/config/giphy'\r\n\r\n// 初始化 GIPHY API 客户端\r\nconst gf = new GiphyFetch(GIPHY_API_KEY)\r\n\r\nexport default {\r\n  name: 'StickerPicker',\r\n  data() {\r\n    return {\r\n      searchQuery: '',\r\n      stickers: [],\r\n      loading: false,\r\n      currentCategory: 'trending',\r\n      categories: [\r\n        { id: 'trending', name: '热门' },\r\n        { id: 'reactions', name: '反应' },\r\n        { id: 'memes', name: '梗图' },\r\n        { id: 'anime', name: '动漫' },\r\n        { id: 'cute', name: '可爱' }\r\n      ],\r\n      searchTimeout: null\r\n    }\r\n  },\r\n  methods: {\r\n    async fetchStickers(options = {}) {\r\n      this.loading = true\r\n      try {\r\n        let response\r\n        if (this.searchQuery) {\r\n          response = await gf.search(this.searchQuery, {\r\n            ...GIPHY_CONFIG,\r\n            ...options,\r\n            type: 'stickers',\r\n            limit: 20  // 减少加载数量以提高性能\r\n          })\r\n        } else {\r\n          response = await gf.trending({\r\n            ...GIPHY_CONFIG,\r\n            ...options,\r\n            type: 'stickers',\r\n            limit: 20  // 减少加载数量以提高性能\r\n          })\r\n        }\r\n        this.stickers = response.data\r\n      } catch (error) {\r\n        console.error('Error fetching stickers:', error)\r\n      }\r\n      this.loading = false\r\n    },\r\n\r\n    handleSearch() {\r\n      if (this.searchTimeout) {\r\n        clearTimeout(this.searchTimeout)\r\n      }\r\n      this.searchTimeout = setTimeout(() => {\r\n        this.fetchStickers()\r\n      }, 300)\r\n    },\r\n\r\n    selectCategory(category) {\r\n      this.currentCategory = category.id\r\n      this.searchQuery = category.id === 'trending' ? '' : category.name\r\n      this.fetchStickers()\r\n    },\r\n\r\n    selectSticker(sticker) {\r\n      this.$emit('select', {\r\n        id: sticker.id,\r\n        url: sticker.images.original.url,  // 使用原始尺寸的图片\r\n        title: sticker.title\r\n      })\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchStickers()\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.sticker-picker {\r\n  width: 100%;\r\n  height: 450px;  /* 增加整体高度 */\r\n  display: flex;\r\n  flex-direction: column;\r\n  background: #2f3136;\r\n  border-radius: 8px;\r\n  overflow: hidden;\r\n  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.24);\r\n}\r\n\r\n.search-container {\r\n  padding: 12px 16px;\r\n  background: #202225;\r\n  border-bottom: none;\r\n}\r\n\r\n.search-input {\r\n  width: 100%;\r\n  padding: 8px 12px;\r\n  border-radius: 4px;\r\n  border: none;\r\n  background: #40444b;\r\n  color: #dcddde;\r\n  font-size: 14px;\r\n  transition: background-color 0.2s;\r\n}\r\n\r\n.search-input:focus {\r\n  outline: none;\r\n  background: #454950;\r\n}\r\n\r\n.search-input::placeholder {\r\n  color: #72767d;\r\n}\r\n\r\n.categories {\r\n  padding: 8px;\r\n  display: flex;\r\n  gap: 8px;\r\n  background: #2f3136;\r\n  border-bottom: 2px solid #202225;\r\n  overflow-x: auto;\r\n  scrollbar-width: none;\r\n}\r\n\r\n.categories::-webkit-scrollbar {\r\n  display: none;\r\n}\r\n\r\n.category-btn {\r\n  padding: 6px 12px;\r\n  border: none;\r\n  border-radius: 4px;\r\n  background: transparent;\r\n  color: #b9bbbe;\r\n  cursor: pointer;\r\n  white-space: nowrap;\r\n  transition: all 0.2s ease;\r\n  font-size: 14px;\r\n  font-weight: 500;\r\n  position: relative;\r\n}\r\n\r\n.category-btn:hover {\r\n  color: #fff;\r\n  background: #36393f;\r\n}\r\n\r\n.category-btn.active {\r\n  color: #fff;\r\n  background: #454950;\r\n}\r\n\r\n.category-btn.active::after {\r\n  content: '';\r\n  position: absolute;\r\n  bottom: -8px;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 2px;\r\n  background: #5865f2;\r\n}\r\n\r\n.stickers-grid {\r\n  flex: 1;\r\n  overflow-y: auto;\r\n  padding: 16px;\r\n  display: grid;\r\n  grid-template-columns: repeat(2, minmax(200px, 1fr));  /* 设置最小宽度 */\r\n  gap: 16px;  /* 增加间距 */\r\n  background: #36393f;\r\n  align-content: start;  /* 从顶部开始排列 */\r\n}\r\n\r\n.sticker-item {\r\n  aspect-ratio: auto;  /* 移除固定宽高比 */\r\n  min-height: 150px;  /* 设置最小高度 */\r\n  max-height: 200px;  /* 设置最大高度 */\r\n  border-radius: 8px;\r\n  overflow: hidden;\r\n  cursor: pointer;\r\n  transition: all 0.2s ease;\r\n  background: #2f3136;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  padding: 8px;  /* 添加内边距 */\r\n  position: relative;\r\n}\r\n\r\n.sticker-item:hover {\r\n  transform: translateY(-2px);\r\n  background: #40444b;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.sticker-item img {\r\n  max-width: 100%;\r\n  max-height: 100%;\r\n  width: auto;  /* 让图片保持原始宽高比 */\r\n  height: auto;  /* 让图片保持原始宽高比 */\r\n  object-fit: contain;  /* 确保完整显示图片 */\r\n  transition: transform 0.2s ease;\r\n}\r\n\r\n.sticker-item:hover img {\r\n  transform: scale(1.05);\r\n}\r\n\r\n.loading {\r\n  grid-column: 1 / -1;\r\n  text-align: center;\r\n  padding: 24px;\r\n  color: #72767d;\r\n  font-size: 14px;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  gap: 8px;\r\n}\r\n\r\n.loading::after {\r\n  content: '';\r\n  width: 16px;\r\n  height: 16px;\r\n  border: 2px solid #72767d;\r\n  border-top-color: transparent;\r\n  border-radius: 50%;\r\n  animation: spin 1s linear infinite;\r\n}\r\n\r\n@keyframes spin {\r\n  to { transform: rotate(360deg); }\r\n}\r\n\r\n/* 滚动条样式 */\r\n.stickers-grid::-webkit-scrollbar {\r\n  width: 8px;\r\n}\r\n\r\n.stickers-grid::-webkit-scrollbar-track {\r\n  background: #2f3136;\r\n}\r\n\r\n.stickers-grid::-webkit-scrollbar-thumb {\r\n  background: #202225;\r\n  border-radius: 4px;\r\n}\r\n\r\n.stickers-grid::-webkit-scrollbar-thumb:hover {\r\n  background: #40444b;\r\n}\r\n\r\n/* 添加标题样式 */\r\n.sticker-picker-header {\r\n  paddin