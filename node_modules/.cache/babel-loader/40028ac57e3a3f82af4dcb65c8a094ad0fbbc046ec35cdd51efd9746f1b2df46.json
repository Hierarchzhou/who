!-- 聊天界面，当用户已设置昵称时显示 -->\r\n    <div v-else class=\"chat-interface\">\r\n      <header class=\"chat-header\">\r\n        <h1 class=\"chat-title\">Discord风格聊天室</h1>\r\n        <div class=\"user-info-container\">\r\n          <ThemeSelector @theme-changed=\"onThemeChanged\" />\r\n          <div class=\"user-info\">\r\n            <AvatarSelector \r\n              :username=\"username\" \r\n              :initial-avatar=\"userAvatar\"\r\n              @avatar-selected=\"updateAvatar\" \r\n            />\r\n            <span class=\"current-username\">{{ username }}</span>\r\n          </div>\r\n        </div>\r\n      </header>\r\n      \r\n      <div class=\"chat-main\">\r\n        <MessageList \r\n          :messages=\"messages\" \r\n          :currentUsername=\"username\" \r\n          ref=\"messageList\" \r\n        />\r\n        <OnlineUsers \r\n          :onlineUsers=\"onlineUsers\" \r\n          :currentUsername=\"username\" \r\n        />\r\n      </div>\r\n      \r\n      <MessageInput @send-message=\"sendMessage\" />\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport UserNameInput from './UserNameInput.vue';\r\nimport MessageList from './MessageList.vue';\r\nimport MessageInput from './MessageInput.vue';\r\nimport ThemeSelector from './ThemeSelector.vue';\r\nimport OnlineUsers from './OnlineUsers.vue';\r\nimport AvatarSelector from './AvatarSelector.vue';\r\nimport axios from 'axios';\r\nimport { ref, onMounted, onUnmounted } from 'vue';\r\n\r\nexport default {\r\n  name: 'ChatContainer',\r\n  components: {\r\n    UserNameInput,\r\n    MessageList,\r\n    MessageInput,\r\n    ThemeSelector,\r\n    OnlineUsers,\r\n    AvatarSelector\r\n  },\r\n  data() {\r\n    return {\r\n      username: '', // 用户昵称\r\n      userAvatar: '', // 用户头像\r\n      messages: ref([]), // 消息列表\r\n      onlineUsers: ref([]), // 在线用户列表\r\n      apiUrl: 'http://localhost:3000/api/messages', // 消息API地址\r\n      usersApiUrl: 'http://localhost:3000/api/users', // 用户API地址\r\n      pollingInterval: null, // 用于轮询消息的计时器\r\n      onlinePollingInterval: null, // 用于轮询在线用户的计时器\r\n      currentTheme: localStorage.getItem('chat-theme') || 'discord', // 当前主题\r\n      currentUser: ref(null)\r\n    }\r\n  },\r\n  created() {\r\n    // 检查是否有保存的用户信息\r\n    const savedUsername = localStorage.getItem('chat-username');\r\n    const savedAvatar = localStorage.getItem('chat-avatar');\r\n    \r\n    if (savedUsername) {\r\n      this.username = savedUsername;\r\n      this.userAvatar = savedAvatar || '';\r\n      \r\n      this.fetchMessages(); // 获取消息\r\n      this.fetchOnlineUsers(); // 获取在线用户\r\n      this.startPolling(); // 开始轮询获取新消息和在线用户\r\n      this.setUserOnline(); // 设置用户在线状态\r\n    }\r\n    \r\n    // 添加页面关闭事件监听器，用于设置用户离线状态\r\n    window.addEventListener('beforeunload', this.setUserOffline);\r\n  },\r\n  beforeUnmount() {\r\n    // 组件销毁前清除轮询和事件监听器\r\n    this.stopPolling();\r\n    window.removeEventListener('beforeunload', this.setUserOffline);\r\n    this.setUserOffline(); // 设置用户离线状态\r\n  },\r\n  methods: {\r\n    // 设置用户名和头像\r\n    setUsername(userData) {\r\n      this.username = userData.username; // 设置用户名\r\n      this.userAvatar = userData.avatar || ''; // 设置头像\r\n      \r\n      // 保存用户信息到本地存储\r\n      localStorage.setItem('chat-username', this.username);\r\n      if (this.userAvatar) {\r\n        localStorage.setItem('chat-avatar', this.userAvatar);\r\n      }\r\n      \r\n      this.fetchMessages(); // 获取消息\r\n      this.fetchOnlineUsers(); // 获取在线用户\r\n      this.startPolling(); // 开始轮询获取新消息和在线用户\r\n      this.setUserOnline(); // 设置用户在线状态\r\n    },\r\n    \r\n    // 更新用户头像\r\n    async updateAvatar(avatarUrl) {\r\n      this.userAvatar = avatarUrl; // 更新头像\r\n      localStorage.setItem('chat-avatar', avatarUrl); // 保存头像到本地存储\r\n      \r\n      try {\r\n        // 更新服务器上的头像\r\n        await axios.post(`${this.usersApiUrl}/avatar`, {\r\n          username: this.username,\r\n          avatar: avatarUrl\r\n        });\r\n      } catch (error) {\r\n        console.error('更新头像失败:', error);\r\n      }\r\n    },\r\n    \r\n    // 设置用户在线状态\r\n    async setUserOnline() {\r\n      try {\r\n        await axios.post(`${this.usersApiUrl}/online`, {\r\n          username: this.username,\r\n          avatar: this.userAvatar\r\n        });\r\n      } catch (error) {\r\n        console.error('设置用户在线状态失败:', error);\r\n      }\r\n    },\r\n    \r\n    // 设置用户离线状态\r\n    async setUserOffline() {\r\n      if (this.username) {\r\n        try {\r\n          await axios.post(`${this.usersApiUrl}/offline`, {\r\n            username: this.username\r\n          });\r\n        } catch (error) {\r\n          console.error('设置用户离线状态失败:', error);\r\n        }\r\n      }\r\n    },\r\n    \r\n    // 获取消息列表\r\n    async fetchMessages() {\r\n      try {\r\n        const response = await axios.get(this.apiUrl);\r\n        this.messages.value = response.data;\r\n      } catch (error) {\r\n        console.error('获取消息失败:', error);\r\n        // 开发阶段如果API未就绪，使用模拟数据\r\n        if (this.messages.value.length === 0) {\r\n          this.messages.value = [\r\n            { \r\n              id: 1, \r\n              user: 'System', \r\n              content: '欢迎来到聊天室!', \r\n              timestamp: new Date().toISOString(),\r\n              avatar: 'https://ui-avatars.com/api/?name=System&background=ED4245&color=fff'\r\n            }\r\n          ];\r\n        }\r\n      }\r\n    },\r\n    \r\n    // 获取在线用户列表\r\n    async fetchOnlineUsers() {\r\n      try {\r\n        const response = await axios.get(`${this.usersApiUrl}/online`);\r\n        this.onlineUsers.value = response.data;\r\n      } catch (error) {\r\n        console.error('获取在线用户失败:', error);\r\n      }\r\n    },\r\n    \r\n    // 发送消息\r\n    async sendMessage(content) {\r\n      try {\r\n        const newMessage = {\r\n          user: this.username,\r\n          content: content,\r\n          avatar: this.userAvatar\r\n        };\r\n        \r\n        // 发送消息到API\r\n        const response = await axios.post(this.apiUrl, newMessage);\r\n        \r\n        // 将新消息添加到消息列表\r\n        this.messages.push(response.data);\r\n      } catch (error) {\r\n        console.error('发送消息失败:', error);\r\n        \r\n        // 开发阶段如果API未就绪，模拟消息发送\r\n        const mockMessage = {\r\n          id: Date.now(),\r\n          user: this.username,\r\n          content: content,\r\n          avatar: this.userAvatar,\r\n          timestamp: new Date().toISOString()\r\n        };\r\n        this.messages.push(mockMessage);\r\n      }\r\n      \r\n      // 更新用户在线状态\r\n      this.setUserOnline();\r\n    },\r\n    \r\n    // 开始轮询获取新消息和在线用户\r\n    startPolling() {\r\n      // 轮询消息\r\n      this.pollingInterval = setInterval(() => {\r\n        this.fetchMessages();\r\n      }, 3000); // 每3秒轮询一次\r\n      \r\n      // 轮询在线用户\r\n      this.onlinePollingInterval = setInterval(() => {\r\n        this.fetchOnlineUsers();\r\n        this.setUserOnline(); // 保持用户在线状态\r\n      }, 30000); // 每30秒轮询一次\r\n    },\r\n    \r\n    // 停止轮询\r\n    stopPolling() {\r\n      if (this.pollingInterval) {\r\n        clearInterval(this.pollingInterval);\r\n        this.pollingInterval = null;\r\n      }\r\n      \r\n      if (this.onlinePollingInterval) {\r\n        clearInterval(this.onlinePollingInterval);\r\n        this.onlinePollingInterval = null;\r\n      }\r\n    },\r\n    \r\n    // 主题变更处理函数\r\n    onThemeChanged(theme) {\r\n      this.currentTheme = theme;\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.chat-container {\r\n  height: 100vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n  background-color: var(--chat-background); /* 使用主题变量 */\r\n  color: var(--text-color); /* 使用主题变量 */\r\n  position: relative;\r\n  z-index: 1;\r\n  max-width: 1400px;\r\n  margin: 0 auto;\r\n  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);\r\n}\r\n\r\n.chat-interface {\r\n  display: flex;\r\n  flex-direction: column;\r\n  height: 100%;\r\n  backdrop-filter: blur(5px); /* 添加模糊效果 */\r\n}\r\n\r\n.chat-header {\r\n  padding: 1rem 1.5rem;\r\n  background-color: var(--primary-color); /* 使用主题变量 */\r\n  color: var(--header-color); /* 使用主题变量 */\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  box-shadow: var(--header-shadow);\r\n  position: relative;\r\n  z-index: 2;\r\n}\r\n\r\n.chat-title {\r\n  margin: 0;\r\n  font-size: 1.25rem;\r\n  font-weight: 600;\r\n  letter-spacing: 0.5px;\r\n}\r\n\r\n.user-info-container {\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.user-info {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-left: 1rem;\r\n  background-color: rgba(255, 255, 255, 0.1);\r\n  padding: 0.5rem 0.75rem;\r\n  border-radius: 2rem;\r\n  backdrop-filter: blur(5px);\r\n}\r\n\r\n.current-username {\r\n  font-weight: bold;\r\n  margin-left: 0.5rem;\r\n}\r\n\r\n.chat-main {\r\n  display: flex;\r\n  flex: 1;\r\n  overflow: hidden;\r\n  position: relative;\r\n}\r\n\r\n/* 添加一个覆盖层，用于实现电影质感 */\r\n.chat-container::before {\r\n  content: '';\r\n  position: absolute;\r\n  top: 0;\r\n  left: 0;\r\n  right: 0;\r\n  bottom: 0;\r\n  background: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.2));\r\n  pointer-events: none; /* 确保不会阻止点击事件 */\r\n  z-index: 0;\r\n}\r\n\r\n/* 添加电影颗粒效果 */\r\n.chat-container::after {\r\n  content: '';\r\n  position: absolute;\r\n  top: 0;\r\n  left: 0;\r\n  right: 0;\r\n  bottom: 0;\r\n  background-image: url('data:image/png;base64,');\r\n  opacity: 0.05;\r\n  pointer-events: none;\r\n  z-index: 1;\r\n  mix-blend-mode: overlay;\r\n}\r\n\r\n/* 文艺电影主题特定样式 */\r\n:global(.theme-cinematic) .chat-title {\r\n  font-family: 'Playfair Display', serif;\r\n  font-weight: 700;\r\n  letter-spacing: 1px;\r\n}\r\n\r\n:global(.theme-cinematic) .chat-header {\r\n  background: linear-gradient(to right, var(--primary-color), var(--secondary-color));\r\n}\r\n\r\n:global(.theme-cinematic) .user-info {\r\n  background-color: rgba(0, 0, 0, 0.3);\r\n}\r\n</style> "],"mappings":";;EACOA,KAAK,EAAC;AAAgB;;EAQbA,KAA